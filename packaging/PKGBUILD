#Maintainer: nixalot <nixalot at nixalot dot com>
pkgname=aurtools
pkgver=1.0
pkgrel=1
pkgdesc="Utilities for searching for and downloading packages from the Arch Linux AUR"
arch=(any)
license=(BSD)
url="https://github.com/nixalot/$pkgname"
make_depends=('python-setuptools')
depends=('python' 'python-requests')
source=(
  ${pkgname}-${pkgver}.tar.gz::https://github.com/nixalot/aurtools/archive/v1.0.tar.gz
)
sha512sums=('f1a78447a4310ef69e473b47ee574a1fc9d27f497e2ee9e9a4e420c1658174d4532a085a8bb63c73174671da3c1fb5a792ff74187a070c6e2ab25623d52835f1')

package ()
{
  cd "${srcdir}/${pkgname}-${pkgver}"

  python setup.py install --root="$pkgdir"
  mkdir -p "${pkgdir}/usr/share/licenses/${pkgname}"
  tail -n +3 LICENSE > "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

